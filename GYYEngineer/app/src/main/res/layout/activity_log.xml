<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/loginLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.cpsecpom.LoginActivity">

        <ImageView
            android:id="@+id/headicon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/aaaa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_weight="9"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/conner_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@mipmap/login_phone" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />

                <EditText
                    android:id="@+id/nameText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:background="@drawable/conner_right"
                    android:hint="请输入手机号"
                    android:textColor="@color/black">


                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/conner_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@mipmap/login_password" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff" />

                <EditText
                    android:id="@+id/pwdText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/conner_right"
                    android:hint="请输入密码"
                    android:password="true"
                    android:textColor="@color/black" />


            </LinearLayout>

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_tijiaopj"
                android:text="登录"
                android:textColor="#ffffff"
                android:textSize="22sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/regButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/light_grey"
                android:gravity="center"
                android:text="注册新账号"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#bababa" />

            <Button
                android:id="@+id/forgetButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/light_grey"
                android:gravity="center"
                android:text="忘记密码？"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>














