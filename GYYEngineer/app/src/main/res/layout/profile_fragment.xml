<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_header_layout" />

    <View style="@style/LCIMDividerLine.Horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <View style="@style/LCIMDividerLine.Horizontal" />

                <LinearLayout
                    android:id="@+id/profile_avatar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/common_horizontal_margin"
                    android:paddingRight="@dimen/common_horizontal_margin">

                    <ImageView
                        android:id="@+id/profile_avatar_view"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:paddingTop="10dp"
                        android:text="努力加载中..."
                        android:textColor="@color/dark_grey"
                        android:textSize="18sp" />


                </LinearLayout>

                <View style="@style/LCIMDividerLine.Horizontal" />

                <RelativeLayout
                    android:id="@+id/rl_hpl"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <ImageView
                        android:id="@+id/iv_hpl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/hpl" />

                    <TextView
                        android:id="@+id/hpl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_hpl"
                        android:text="@string/hpl"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>

                <View
                    style="@style/LCIMDividerLine.Horizontal"
                    android:layout_marginLeft="55dp" />

                <RelativeLayout
                    android:id="@+id/rl_xxlr"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <ImageView
                        android:id="@+id/iv_xxlr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/xxlr" />

                    <TextView
                        android:id="@+id/xxlr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_xxlr"
                        android:text="机器信息录入"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>

                <View
                    style="@style/LCIMDividerLine.Horizontal"
                    android:layout_marginLeft="55dp" />

                <RelativeLayout
                    android:id="@+id/rl_setting"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <ImageView
                        android:id="@+id/tu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/setting2x" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/tu2"
                        android:layout_toRightOf="@+id/tu2"
                        android:text="设置"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ImageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>

                <View
                    style="@style/LCIMDividerLine.Horizontal"
                    android:layout_marginLeft="55dp" />

                <RelativeLayout
                    android:id="@+id/rl_about"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <ImageView
                        android:id="@+id/tu5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/guanyu2x" />

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tu5"
                        android:text="关于"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/jiantou" />
                </RelativeLayout>

                <View
                    style="@style/LCIMDividerLine.Horizontal"
                    android:layout_marginLeft="55dp" />

                <RelativeLayout
                    android:id="@+id/rl_version"
                    android:layout_width="match_parent"
                    android:layout_height="55dp">

                    <ImageView
                        android:id="@+id/iv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/guanyu2x" />

                    <TextView
                        android:id="@+id/tv_version0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_version"
                        android:text="检查新版本"
                        android:textColor="@color/dark_grey"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_version"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/lcim_commom_read"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_version0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@mipmap/jiantou" />
                    </LinearLayout>
                </RelativeLayout>

                <View style="@style/LCIMDividerLine.Horizontal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>